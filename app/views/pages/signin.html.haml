.panel.panel-primary
  .panel-heading
    %h1.panel-title.text-center= t ".title"
  .panel-body
    .container#signin-form
      = render 'common/fb_login_button'
      .clearfix.text-center or
      .well
        = simple_form_for :user, url: signin_path do |f|
          = f.input :phone_number, hint: false
          = f.input :password, hint: false
          = f.button :submit, "Sign in", class: "btn btn-primary"