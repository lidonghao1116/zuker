#sign_in_modal.ui.modal.small.basic
  .header.text-center= t ".title"
  .content
    .well.col-md-offset-3.col-md-6.col-sm-offset-2.col-sm-8.col-xs-12
      = render 'common/fb_login_button'
      = horizontal_divider('Or')
      = simple_form_for :user, url: signin_path, html: { class: 'ui form'}, wrapper: :semantic_form, remote: true do |f|
        = f.input :phone_number, hint: false, label: '手機號碼'
        = f.input :password, hint: false, label: '密碼'
        = f.button :submit, "Sign in", class: "btn btn-primary"
        .ui.error.message