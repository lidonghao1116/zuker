= simple_form_for @room do |f|
  = f.error_notification

  .form-inputs
    = f.input :title
    = f.input :description
    = f.input :location
    = f.input :price
    = f.simple_fields_for :pictures do |p|
      = p.input :image, as: :file, input_html:{ multiple: true }


  .form-actions
    = f.button :submit

- if @room.pictures
  /= image_tag @room.pictures[0].image_url(:thumb)


/= render 'upload_image' if action_name == 'edit' || action_name == 'update'