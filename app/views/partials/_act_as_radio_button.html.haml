- model_name = obj.class.to_s.downcase
- model_data = (model_name.camelize + "Data").constantize

= f.error x
= f.label x
.form-group
  = f.collection_radio_buttons x, model_data.send("#{x}_categories"), :last, :first do |b|
    = b.label(class: "btn btn-default btn-lg act_as_radio_button #{'btn-warning' if b.value == obj.send(x) }") { b.radio_button(class: "hidden", data: { cancelable: "#{b.value == @house.send(x)? true : false }" } ) + render_option_category(b.value, x) }