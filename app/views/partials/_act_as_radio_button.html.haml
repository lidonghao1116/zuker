- specific_model ||= nil
- if specific_model
  - model_data = (specific_model.camelize + "Data").constantize
- else
  - model_data = ("#{obj.model_name.name}Data").constantize

= f.error x
= f.label x
.form-group
  = f.collection_radio_buttons x, model_data.send("#{x}_categories"), :last, :first do |b|
    = b.label(class: "btn btn-default btn-lg act_as_radio_button #{'btn-warning' if b.value == obj.send(x) }") { b.radio_button(class: "hidden") + render_option_category(b.value, x) }