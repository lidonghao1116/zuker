- model_name = obj.class.to_s.downcase
- specific_model ||= nil
- if specific_model
  - model_data = (specific_model.camelize + "Data").constantize
- else
  - model_data = (model_name.camelize + "Data").constantize

= f.error x
= f.label x
.form-group
  = f.collection_check_boxes x, model_data.send("#{x}_categories"), :last, :first do |b|
    = b.label(class: "btn btn-default btn-lg act_as_check_box #{'btn-info' if obj.send(x).include? b.value }") { b.check_box(class: "hidden") + render_option_category(b.value, x) }