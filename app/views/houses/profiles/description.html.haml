%h1.inline= t ".title"
%span.ajax-text
%hr

= simple_form_for @house, remote: true do |f|
  = f.error_notification
  
  .form-inputs.ajax-input
    = f.input :title
    = f.input :description, :input_html => {:rows => 10}

    - [:rule].each do |x|
      = f.label x
      .form-group
        = render 'partials/act_as_check_box', attribute_name: x, obj: @house, mark: 'btn-danger', f: f, type: "submit"
        .hidden
          = f.input x, as: :check_boxes, collection: House.option_categories(x)
    - [:gender, :direction].each do |x|
      = f.label x
      = f.input x, as: :hidden
      .form-group
        = render 'partials/act_as_radio_button', attribute_name: x, obj: @house, mark: 'btn-info', f: f, type: "submit"
  .hidden
    = f.submit