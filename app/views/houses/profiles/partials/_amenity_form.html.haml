= simple_form_for @house, remote: true do |f|
  = f.error_notification
  .form-inputs
    - [:amenity, :furniture, :extra_fee, :public_facility, :safety].each do |x|
      = f.error x
      = f.label x
      .form-group
        = f.collection_check_boxes x, HouseData.send("#{x}_categories"), :last, :first do |b|
          = b.label(class: "btn btn-default btn-lg act_as_check_box #{'btn-info' if @house.send(x).include? b.value }") { b.check_box(class: "hidden") + render_option_category(b.value, x) }
    - [:personal_parking_lot, :special_floor].each do |x|
      = f.error x
      = f.label x
      .form-group
        = f.collection_radio_buttons x, HouseData.send("#{x}_categories"), :last, :first do |b|
          = b.label(class: "btn btn-default btn-lg act_as_radio_button #{'btn-warning' if b.value == @house.send(x) }") { b.radio_button(class: "hidden") + render_option_category(b.value, x) }

    .hidden= f.submit