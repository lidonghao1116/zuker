= f.error_notification

.form-inputs{ class: ('ajax-input' if action_name == "basic") }
  .row
    - [:house_type, :foreigner].each do |x|
      %div.col-sm-6
        = f.error x
        = f.label x
        = f.collection_radio_buttons x, HouseData.send("#{x}_categories"), :last, :first do |b|
          = b.label(class: "btn btn-default btn-lg act_as_radio_button #{'btn-warning' if b.value == @house.send(x) }") { b.radio_button(class: "hidden") + render_option_category(b.value, x) }

        = f.input :english_help, as: :boolean if x == :foreigner
  
  %hr
  = f.association :school, collection: School.categories, prompt: true

  = render 'houses/profiles/partials/address_form', f: f

  .row
    %hr
    = f.input :price, wrapper_html: { class: 'col-sm-4'}
    = f.input :min_lease, collection: 1..12, prompt: :translate, wrapper_html: { class: 'col-sm-4'}
    = f.input :security_fee, wrapper_html: { class: 'col-sm-4'}
    
  #conditional_inputs{ class: ('hide' unless action_name == "basic" && @house.house_type == 1)}    
    .row
      %hr
      = f.input :bedroom, collection: 0..12, wrapper_html: { class: 'col-sm-3'}, prompt: :translate
      = f.input :shared_space, collection: 0..12, wrapper_html: { class: 'col-sm-3'}, prompt: :translate
      = f.input :bathroom, collection: 0..12, wrapper_html: { class: 'col-sm-3'}, prompt: :translate
      = f.input :balcony, collection: 0..12, wrapper_html: { class: 'col-sm-3'}, prompt: :translate
    .row
      %hr
      = f.input :area, wrapper_html: { class: 'col-sm-4'}
      = f.input :building_floor, wrapper_html: { class: 'col-sm-4'}
      = f.input :at_floor, wrapper_html: { class: 'col-sm-4'}

.form-actions.text-center{ class: ('hidden' if action_name == "basic") }
  = f.button :submit
  = link_to I18n.t(".back"), houses_path
  /= f.input :house_type, as: :radio_buttons, collection: HouseData.house_type_categories
