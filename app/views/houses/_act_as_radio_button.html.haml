- model_name = obj.class.to_s.downcase
- prefix = model_name + "_"
- model_data = (model_name.camelize + "Data").constantize
- model_data.public_send( "#{attribute_name}_categories").each do |key, value|
  - selected = mark if @house.public_send("#{attribute_name}") == value
  %button{ name:"#{prefix}#{attribute_name}", type: type, class:"btn btn-default btn-lg act_as_radio_button #{selected}", data: { value: value, selected: mark } }
    = render_option_category(value, attribute_name)