.container
  = render 'house_images'

  .col-sm-8
    %h2= @house.title
    %h5= @house.address

  .col-sm-4
    = "#{ number_to_currency(@house.price, precision: 0) } / month"
    %p= "Last updated at: #{ @house.updated_at.strftime('%Y-%m-%d') }"
  
  - ["amenity", "furniture", "extra_fee"].each do |x|
    = render 'checked_options', x: x

  %p= sanitize @house.description

  = simple_form_for :comment, { url: new_comment_house_path(@house), remote: true } do |f|
    = f.label :content, 'Leave a comment'
    = f.input :content, as: :text, label: false
    = f.submit
  
  #comments-section
    = render @comments
    
  = link_to 'Edit', basic_house_path(@house)
  \|
  = link_to 'Back', houses_path

  = console