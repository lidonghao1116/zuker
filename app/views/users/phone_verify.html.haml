#verify-pin
  %h3 Enter your PIN
  = simple_form_for :verify, { url: verify_pin_user_path(current_user.id) } do |f|
    
    = f.input :pin, autofocus: true
    = submit_tag "Verify PIN", class: "btn btn-primary"
    = link_to resend_pin_user_path(current_user) do
      = t ".resend_pin"
  /= current_user.pin.id
  /\|
  /= current_user.pin.content
  /\|
  /= Time.current
  /\|
  /= Time.current - current_user.pin.created_at

