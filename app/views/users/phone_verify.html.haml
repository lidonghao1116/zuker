#verify-pin
  %h3 Enter your PIN
  = form_tag verify_pin_user_path(current_user.id) do |f|
    = hidden_field_tag 'hidden_phone_number', ''
    .form-group
      = text_field_tag :pin
    = submit_tag "Verify PIN", class: "btn btn-primary"
  = link_to 'resend', verify_again_user_path(current_user)
  = current_user.pin.error_times

