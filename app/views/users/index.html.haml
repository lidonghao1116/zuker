%h1 Listing users

%table
  %thead
    %tr
      %th= t "user.full_name"
      %th= t "user.phone_number"
      %th= t "user.email"
      %th
      %th
      %th

  %tbody
    - @users.each do |user|
      %tr
        %td= user.full_name
        %td= user.phone_number
        %td= user.email
        %td= link_to 'Show', user
        %td= link_to 'Edit', edit_user_path(user)
        %td= link_to 'Destroy', user, :method => :delete, :data => { :confirm => 'Are you sure?' }

%br

