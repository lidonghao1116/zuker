= simple_form_for(@user) do |f|
  = f.error_notification

  .form-inputs
    = f.input :name
    = f.input :phone_number, hint: '請輸入真實的手機號碼，例如：0912345678，此號碼未來將作為登入帳號'
    = f.input :password
    = f.input :password_confirmation
    = f.input :email
    = f.input :expected_graduation_date, as: :date, start_year: Date.today.year, end_year: Date.today.year + 10, discard_day: true, order: [:month, :year]

  .form-actions
    = f.button :submit
