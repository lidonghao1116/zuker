#user-form
  = simple_form_for @user do |f|
    = f.error_notification

    .form-inputs
      = f.input :name
      = f.input :phone_number
      - if action_name == 'new'
        = f.input :password
        = f.input :password_confirmation
      = f.input :email
      = f.label :start_school_year
      = f.input :start_school_year, as: :date, start_year: Date.today.year, end_year: Date.today.year - 15, discard_day: true, discard_month: true

    .form-actions
      = f.button :submit
      = link_to 'Back', user_path, class:'btn btn-default' if action_name == 'edit'
