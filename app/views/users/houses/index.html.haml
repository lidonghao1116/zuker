%h1 Listing houses

%table
  %thead
    %tr
      %th Title
      %th Description
      %th Location
      %th Price
      %th
      %th
      %th

  %tbody
    - @user.houses.each do |house|
      %tr
        %td= house.title
        %td= house.description
        %td= house.address
        %td= house.price
        %td= link_to 'Show', house
        %td= link_to 'Edit', basic_user_house_path(@user, house)
        %td= link_to 'Destroy', user_house_path(@user, house), :method => :delete, :data => { :confirm => 'Are you sure?' }

%br

